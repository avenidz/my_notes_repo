<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.testapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo_notes_round"
        android:label="@string/app_name"
        android:name=".MyApplication"
        android:roundIcon="@mipmap/app_logo_notes_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestApp">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="My Notes"
            android:theme="@style/Theme.TestApp">
        </activity>
            <activity android:name=".SplashScreen"
                android:theme="@style/Theme.AppCompat.Light.NoActionBar"
                android:exported="true">
                <intent-filter>
                    <action android:name="android.intent.action.MAIN" />
                    <category android:name="android.intent.category.LAUNCHER" />
                </intent-filter>
            </activity>

            <activity
                android:name=".activity.AddTodoActivity"
                android:exported="true"
                />
            <activity android:name=".activity.EditTodoActivity"
                android:exported="true"
                />
            <activity android:name=".activity.ViewTodoDetails"
                android:exported="true"
                />

    </application>

</manifest>