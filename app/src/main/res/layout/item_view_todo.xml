<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutSlide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:paddingTop="5dp"
        >
        <CheckBox
            android:id="@+id/todoCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/todoName"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/todoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#4BA5D8"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/todoCheckBox"
            app:layout_constraintBottom_toTopOf="@id/todoDetails"
            tools:text="Sample" />
        <TextView
            android:id="@+id/todoDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#6C6A6A"
            app:layout_constraintTop_toBottomOf="@id/todoName"
            app:layout_constraintStart_toEndOf="@id/todoCheckBox"
            tools:text="details"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>